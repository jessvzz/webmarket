<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>d:/Java/TomcatWork</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.author</param-name>
        <param-value>Giuseppe Della Penna</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.filler.timestamp</param-name>
        <param-value>it.univaq.f4i.iw.ex.webmarket.controller.DummyModelFiller</param-value>
    </context-param>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/compose,/write</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/webdb2</param-value>
    </context-param>
    <servlet>
        <servlet-name>OrdinanteHomepage</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.OrdinanteHomepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TecnicoHomepage</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.TecnicoHomepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomepage</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.AdminHomepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneUtenti</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.GestioneUtenti</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneCategorie</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.GestioneCategorie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categoria</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.CategoriaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificaCategoria</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.ModificaCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AggiungiCategoria</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.AggiungiCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RichiesteTecnico</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.RichiesteTecnico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProposteTecnico</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.ProposteTecnico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoricoTecnico</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.StoricoTecnico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RichiesteOrdinante</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.RichiesteOrdinante</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ordini</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.Ordini</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuovaRichiesta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.NuovaRichiesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificheOrdinante</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.NotificheOrdinante</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdinanteHomepage</servlet-name>
        <url-pattern>/homepageordinante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TecnicoHomepage</servlet-name>
        <url-pattern>/homepagetecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomepage</servlet-name>
        <url-pattern>/homepageadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneUtenti</servlet-name>
        <url-pattern>/gestioneutenti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneCategorie</servlet-name>
        <url-pattern>/gestionecategorie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categoria</servlet-name>
        <url-pattern>/categoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificaCategoria</servlet-name>
        <url-pattern>/modificacategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AggiungiCategoria</servlet-name>
        <url-pattern>/aggiungicategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RichiesteTecnico</servlet-name>
        <url-pattern>/richieste_tecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProposteTecnico</servlet-name>
        <url-pattern>/proposte_tecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoricoTecnico</servlet-name>
        <url-pattern>/storico_tecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RichiesteOrdinante</servlet-name>
        <url-pattern>/richieste_ordinante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ordini</servlet-name>
        <url-pattern>/ordini</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuovaRichiesta</servlet-name>
        <url-pattern>/nuova_richiesta</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>NotificheOrdinante</servlet-name>
        <url-pattern>/notifiche_ordinante</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webdb2</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
