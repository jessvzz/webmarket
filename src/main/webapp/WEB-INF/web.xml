<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>d:/Java/TomcatWork</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.author</param-name>
        <param-value>Giuseppe Della Penna</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.filler.timestamp</param-name>
        <param-value>it.univaq.f4i.iw.ex.newspaper.controller.DummyModelFiller</param-value>
    </context-param>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/compose,/write</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/webdb2</param-value>
    </context-param>
    <servlet>
        <servlet-name>Image</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.newspaper.controller.RenderImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Issue</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.newspaper.controller.MakeIssue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Article</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.newspaper.controller.MakeArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComposeIssue</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.newspaper.controller.ComposeIssue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListIssues</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.ListIssues</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteArticle</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.newspaper.controller.ComposeArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.ex.webmarket.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Issue</servlet-name>
        <url-pattern>/issue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComposeIssue</servlet-name>
        <url-pattern>/compose</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListIssues</servlet-name>
        <url-pattern>/issues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteArticle</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>issues</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webdb2</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
